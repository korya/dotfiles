#!/usr/bin/env bash

set -e

GVIM="$(command -v gvim || command -v mvim || command -v vim)"

if [ $# -eq 1 ]; then
  file="$(sed <<<"$1" \
    -e 's/^\(.*\):\([0-9]\+\):\([0-9]\+\):.\+$/\1/' \
    -e 's/^\(.*\):\([0-9]\+\):\([0-9]\+\):\?$/\1/' \
    -e 's/^\(.*\):\([0-9]\+\):\?$/\1/' \
  )"
  line="$(sed -n <<<"$1" \
    -e 's/^\(.*\):\([0-9]\+\):\([0-9]\+\):.\+$/+\2/p' \
    -e 's/^\(.*\):\([0-9]\+\):\([0-9]\+\):\?$/+\2/p' \
    -e 's/^\(.*\):\([0-9]\+\):\?$/+\2/p' \
  )"
  #echo exec "'${GVIM}'" "'${file}'" "${line}"
  exec "${GVIM}" "${file}" "${line}"
fi

exec "${GVIM}" "$@"

# vim : set filetype=sh :
